<Window x:Class="GStudio.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="G-Studio Recorder MVP"
        Width="1280"
        Height="820"
        MinWidth="1100"
        MinHeight="700"
        WindowStartupLocation="CenterScreen"
        FontFamily="Bahnschrift"
        FontSize="13"
        Background="{StaticResource AppSurface}">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFDF6EE" Offset="0" />
                <GradientStop Color="#FFF4E7D7" Offset="0.48" />
                <GradientStop Color="#FFE9F0E6" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <Ellipse Width="460"
                 Height="460"
                 Margin="-180,-170,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Opacity="0.32">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FFA8E3DD" Offset="0" />
                    <GradientStop Color="#00A8E3DD" Offset="1" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <Ellipse Width="520"
                 Height="520"
                 Margin="0,0,-220,-220"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Bottom"
                 Opacity="0.25">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FFF6C88D" Offset="0" />
                    <GradientStop Color="#00F6C88D" Offset="1" />
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <Border Margin="34"
                CornerRadius="18"
                Padding="26"
                Background="#E9FFFFFF"
                BorderBrush="#40A0947F"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="G-Studio V1 Recorder"
                               FontSize="34"
                               FontWeight="Bold"
                               Foreground="{StaticResource AppInk}" />
                    <TextBlock Margin="0,8,0,0"
                               Text="Record desktop activity, generate cinematic camera-follow segments, and package deterministic preview export metadata."
                               TextWrapping="Wrap"
                               Foreground="#CC1B2733"
                               FontSize="15" />
                </StackPanel>

                <Grid Grid.Row="1" Margin="0,24,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="StartButton"
                            Content="Start Recording"
                            Click="StartRecording_Click"
                            MinWidth="132" />
                    <Button x:Name="StopButton"
                            Grid.Column="1"
                            Content="Stop Recording"
                            Click="StopRecording_Click"
                            MinWidth="126"
                            Background="#FF9D3F1C" />
                    <Button x:Name="PreviewButton"
                            Grid.Column="2"
                            Content="Build Cinematic Preview"
                            Click="BuildPreview_Click"
                            MinWidth="164" />
                    <Button x:Name="ExportButton"
                            Grid.Column="3"
                            Content="Create Export Package"
                            Click="CreateExportPackage_Click"
                            MinWidth="168"
                            Margin="0,0,0,0" />

                    <Border Grid.Column="4"
                            HorizontalAlignment="Right"
                            Background="#FFF3E8D6"
                            BorderBrush="#60A38560"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="14,8">
                        <TextBlock x:Name="StatusText"
                                   Text="Idle"
                                   Foreground="#FF1E5A50"
                                   FontWeight="SemiBold" />
                    </Border>
                </Grid>

                <Grid Grid.Row="2" Margin="0,22,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.1*" />
                        <ColumnDefinition Width="1.5*" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Session"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource AppInk}" />

                        <Border Grid.Row="1"
                                Margin="0,12,0,14"
                                CornerRadius="10"
                                Background="{StaticResource AppSurfaceAlt}"
                                Padding="14,12"
                                BorderBrush="#30A0947F"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Session Path"
                                           Foreground="#AA1B2733"
                                           FontSize="12"
                                           FontWeight="SemiBold" />
                                <TextBlock x:Name="SessionPathText"
                                           Text="No active session"
                                           TextWrapping="Wrap"
                                           Margin="0,3,0,0"
                                           Foreground="#FF1B2733" />
                                <TextBlock x:Name="CaptureStatsText"
                                           Margin="0,10,0,0"
                                           Text="No capture stats yet"
                                           Foreground="#CC1B2733" />
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="2"
                                CornerRadius="10"
                                Background="#FFFDF7EF"
                                BorderBrush="#35A0947F"
                                BorderThickness="1"
                                Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock Text="Camera Frames (first 200)"
                                           FontWeight="SemiBold"
                                           Foreground="#FF1B2733"
                                           Margin="4,0,0,8" />
                                <ListBox x:Name="FrameList"
                                         Grid.Row="1"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         FontFamily="Consolas"
                                         FontSize="12" />
                            </Grid>
                        </Border>
                    </Grid>

                    <Border Grid.Column="1"
                            Margin="20,0,0,0"
                            CornerRadius="10"
                            Background="#FFF8F2E7"
                            BorderBrush="#35A0947F"
                            BorderThickness="1"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Text="Auto Zoom Segments"
                                       FontWeight="SemiBold"
                                       Foreground="#FF1B2733"
                                       Margin="4,0,0,8" />
                            <ListBox x:Name="ZoomSegmentList"
                                     Grid.Row="1"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontFamily="Consolas"
                                     FontSize="12" />
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
